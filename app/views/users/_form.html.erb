
<%= form_with scope: :user, url: users_path, local: true do |f| %>
	<div class="form-group">
		  <%= f.label :username %>
	</div>
	<div class="form-group">
		  <%= f.text_field :username, class: "form-control-lg shadow rounded wigth", placeholder: "Enter your name" %>
	</div>
	<div class="form-group">
		  <%= f.label :email %>
	</div>
	<div class="form-group">
		  <%= f.email_field :email, class: "form-control-lg shadow rounded", placeholder: "Enter your email" %>
	</div>
	<div class="form-group">
		  <%= f.label :password %>
	</div>
	<div class="form-group">
		  <%= f.password_field :password, class: "form-control-lg shadow rounded", placeholder: "Enter password" %>
	</div><br/>
	<p>
		<div class="form-group justify-content-center">
			  <%= f.submit class: "btn btn-warning btn-lg" %>
		</div>
	</p>
<% end %>
