<div class="container text-center col-md-2 mt-3">
	<%= form_with model: @image, :html => {:class => "form-horizontalcenter"} do |f| %>
		<div class="form-group">
			  <%= f.radio_button :accepted, class: "btn-check active"  %>
		</div>
		<div class="form-group justify-content-center">
			<%= f.submit "accept this image", class: "btn btn-warning btn-lg" %>
		</div>
	<% end %>
</div>